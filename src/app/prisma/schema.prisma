generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Order {
  id         String      @id @default(uuid()) 
  firstName  String
  lastName   String
  email      String 
  address    String
  city       String
  items      OrderItem[] 
}

model OrderItem {
  id        String    @id @default(uuid())
  product   String    // Product name
  quantity  Int       // Quantity of the product
  price     Float     // Price of the product
  // No orderId field needed

  Order Order[]
}